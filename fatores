fatores<-function(x){
	nc<-ncol(x)
	nl<-nrow(x)
	pos<-integer()
	nome<-character()
	k<-1
	for(i in 1:nc){
		if(is.factor(x[1,i])){
		pos[k]<-as.integer(i)
		nome[k]<-names(x[i])
		k<-k+1
		}
	
	}
k<-k-1
result<-data.frame(1:k)
result[1]<-nome
result[2]<-as.integer(pos)
names(result)<-c("Coluna","Posição")
return(result)
}
